{% extends 'layout.njk' %}

{% block header %}
  <title>Cursos - Rocketseat</title>
{% endblock header %}

{% block content %}
  
  <div class="content-about">
    <h1>Conteúdos</h1>
  </div>

  <div class="cards">

    <div class="card" id="starter">
      <img src="starter.svg" alt="starter">

      <div class="info">
        <p>05 Módulos</p>
        <p class="price">Gratuito</p>
      </div>
    </div>

    <div class="card" id="launchbase">
      <img src="launchbase.svg" alt="launchbase">

      <div class="info">
        <p>10 Módulos</p>
        <p class="price">Pago</p>
      </div>
    </div>

    <div class="card" id="gostack">
      <img src="gostack.svg" alt="gostack">

      <div class="info">
        <p>14 Módulos</p>
        <p class="price">Pago</p>
      </div>
    </div>

  </div>

  <div class="modal">
    <a class="close">X</a>

    <div class="modal-content">
      <iframe src="" frameborder="0"></iframe>
    </div>
  </div>

  <script src="script.js"></script>

{% endblock content %}