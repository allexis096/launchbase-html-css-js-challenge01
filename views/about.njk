{% extends 'layout.njk' %}

{% block header %}
  <title>Sobre - Rocketseat</title>
{% endblock header %}

{% block content %}

  <div class="content-about">
    <div class="logo"><img src="rocketseat.jpg" alt="logo"></div>
    <h1>{{ info.company }}</h1>
    <h2>{{ info.description }}</h2>
    <ul>
      {% for tech in info.techs %}
        <li>{{ tech.name }}</li>
      {% endfor %}
    </ul>
    <div class="footer">
      {% for link in info.links %}
        <a href="{{ link.link_url }}" target="_blank">{{ link.name }}</a>
      {% endfor %}
    </div>
  </div>

{% endblock content %}